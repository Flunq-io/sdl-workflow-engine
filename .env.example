# Flunq.io Environment Configuration

# Redis Configuration
REDIS_URL=localhost:6379
REDIS_PASSWORD=

# Event Store Service
EVENTS_PORT=8081
EVENTS_GRPC_PORT=9001

# API Service
API_PORT=8080

# Worker Service
WORKER_CONCURRENCY=10

# Executor Service
EXECUTOR_PORT=8083
EXECUTOR_DEFAULT_TIMEOUT=30s
EXECUTOR_MAX_RETRIES=3
EXECUTOR_RATE_LIMIT=100

# UI Service
UI_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8081

# Logging
LOG_LEVEL=info

# Authentication (for production)
JWT_SECRET=your-jwt-secret-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Service URLs (for inter-service communication)
EVENTS_URL=http://localhost:8081
EXECUTOR_URL=http://localhost:8083
