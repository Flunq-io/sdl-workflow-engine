# Redis Configuration
REDIS_URL=localhost:6379
REDIS_HOST=localhost
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info

# Service Ports
METRICS_PORT=9090
HEALTH_PORT=8082

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_CONSUMER_GROUP=worker-service
WORKER_STREAM_BATCH=10
WORKER_STREAM_BLOCK=1s
WORKER_RECLAIM_ENABLED=false

# EventStore Configuration
EVENTSTORE_TYPE=redis

# Database Configuration
DB_TYPE=redis

# Timer Service Configuration
TIMER_SERVICE_ENABLED=true
TIMER_SERVICE_PRECISION=1s

# Workflow Engine Configuration
WORKFLOW_ENGINE_TYPE=serverless
WORKFLOW_TIMEOUT_SECONDS=3600
WORKFLOW_MAX_RETRIES=3

# Event Processing Configuration
EVENT_BATCH_SIZE=10
EVENT_PROCESSING_TIMEOUT=30s
EVENT_RETRY_ATTEMPTS=3
EVENT_RETRY_DELAY_MS=200
