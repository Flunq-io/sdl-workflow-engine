{
  "name": "@flunq/mcp-server",
  "version": "0.1.1",
  "description": "MCP server for flunq.io workflow engine",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:server": "node scripts/test-server.js",
    "lint": "echo 'Linting disabled - TypeScript compiler provides type checking'",
    "lint:fix": "echo 'Linting disabled - TypeScript compiler provides type checking'",
    "clean": "rm -rf dist coverage",
    "prestart": "npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "workflow",
    "ai",
    "automation"
  ],
  "author": "flunq.io",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0",
    "yaml": "^2.3.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
